.category-scroll {
  white-space: nowrap;
  background: #fff;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.category-list {
  display: inline-flex;
  padding: 0 20rpx;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.category-item.active {
  background: #fff0f0;
  color: #ff6b6b;
}

.category-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
  border-radius: 50%;
}

.dish-list {
  padding-bottom: 120rpx;
}

.dish-item {
  display: flex;
  margin-bottom: 20rpx;
}

.dish-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.dish-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.dish-desc {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.dish-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dish-price {
  display: flex;
  align-items: baseline;
  gap: 10rpx;
}

.price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.dish-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.cart-control {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.btn-minus,
.btn-add {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: #ff6b6b;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.count {
  font-size: 28rpx;
  font-weight: bold;
  min-width: 40rpx;
  text-align: center;
}

.cart-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  z-index: 100;
}

.cart-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.cart-icon-wrapper {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  background: #ff6b6b;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cart-icon {
  width: 50rpx;
  height: 50rpx;
}

.cart-badge {
  position: absolute;
  top: 0;
  right: 0;
  background: #f00;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
}

.cart-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.btn-checkout {
  background: #ff6b6b;
  color: #fff;
  padding: 20rpx 50rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
}

